<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FavoritesPg">

    <Button
            android:text="@string/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/favBackHomeBtn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
    />
    <ListView
            android:layout_width="407dp"
            android:layout_height="611dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp" android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/favBackHomeBtn" android:id="@+id/favListView"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/favSearchEditText" android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp" app:layout_constraintStart_toEndOf="@+id/favBackHomeBtn"
            android:layout_marginTop="11dp" app:layout_constraintTop_toTopOf="parent" android:hint="@string/recipe_name"
            android:autofillHints=""/>
</androidx.constraintlayout.widget.ConstraintLayout>